#!/bin/sh

PREREQ="udev"

prereqs()
{
	echo "${PREREQ}"
}

case ${1} in
	prereqs)
		prereqs
		exit 0
		;;
esac

# Source required function libraries
. /scripts/functions
. /scripts/volumio-functions

# -------------------------------------------------------------------
# PHASE 1: Handle plymouth= rotation parameter for theme images
# -------------------------------------------------------------------

CMDLINE=$(cat /proc/cmdline)
ROTATION=0

# Detect plymouth= parameter (for volumio-adaptive theme)
if echo "$CMDLINE" | grep -q "plymouth=90"; then ROTATION=90; fi
if echo "$CMDLINE" | grep -q "plymouth=180"; then ROTATION=180; fi
if echo "$CMDLINE" | grep -q "plymouth=270"; then ROTATION=270; fi

# Only patch theme if non-zero rotation requested
if [ "$ROTATION" != "0" ]; then
  ADAPTIVE_SCRIPT="/usr/share/plymouth/themes/volumio-adaptive/volumio-adaptive.script"
  
  # Check if volumio-adaptive theme is installed
  if [ -f "$ADAPTIVE_SCRIPT" ]; then
    PATCHED_SCRIPT="/tmp/volumio-adaptive.script"
    
    # Copy original script to writable location
    if cp "$ADAPTIVE_SCRIPT" "$PATCHED_SCRIPT" 2>/dev/null; then
      # Patch the rotation value in the copy
      if sed -i "s/^plymouth_rotation = [0-9]*;/plymouth_rotation = ${ROTATION};/" "$PATCHED_SCRIPT" 2>/dev/null; then
        # Bind mount the patched script over the original
        mount --bind "$PATCHED_SCRIPT" "$ADAPTIVE_SCRIPT" 2>/dev/null || true
      fi
    fi
  fi
fi

# -------------------------------------------------------------------
# PHASE 2: Start Plymouth daemon
# -------------------------------------------------------------------

SPLASH="true"

for ARGUMENT in $(cat /proc/cmdline)
do
	case "${ARGUMENT}" in
		splash*)
			SPLASH="true"
			;;

		nosplash*|plymouth.enable=0)
			SPLASH="false"
			;;
	esac
done

if [ "${SPLASH}" = "true" ]
then
	# Wait for display device with configurable timeout
	PLYMOUTH_WAIT_TIMEOUT="${PLYMOUTH_WAIT_TIMEOUT:-5}"
	
	if wait_for_display "${PLYMOUTH_WAIT_TIMEOUT}"; then
		# Display found, check if suitable for Plymouth
		plymouth_check_display
		display_status=$?
		
		if [ $display_status -eq 0 ]; then
			# Display OK for graphical Plymouth
			PLYMOUTH_THEME=""
		elif [ $display_status -eq 1 ]; then
			# Use text theme for problematic displays
			PLYMOUTH_THEME="${PLYMOUTH_TEXT_THEME:-volumio-text}"
		else
			# No suitable display, skip Plymouth
			exit 0
		fi
		
		# Detect and apply rotation if specified
		rotation=$(detect_display_rotation)
		if [ -n "$rotation" ]; then
			# Apply rotation via fbcon if framebuffer present
			if [ -c /dev/fb0 ]; then
				echo "$rotation" > /sys/class/graphics/fbcon/rotate 2>/dev/null || true
			fi
		fi
		
		# Start Plymouth
		mkdir -m 0755 /run/plymouth 2>/dev/null || true
		
		if [ -n "$PLYMOUTH_THEME" ]; then
			/usr/sbin/plymouthd --mode=boot --attach-to-session --pid-file=/run/plymouth/pid --tty=/dev/tty1 --theme="$PLYMOUTH_THEME"
		else
			# Should never reach here, but fallback without theme
			/usr/sbin/plymouthd --mode=boot --attach-to-session --pid-file=/run/plymouth/pid --tty=/dev/tty1
		fi
		
		/usr/bin/plymouth --show-splash
	else
		# Timeout waiting for display - skip Plymouth
		:
	fi
fi
